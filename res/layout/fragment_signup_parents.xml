<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity" >

    <!-- Login form -->

    <ScrollView
        android:id="@+id/signup_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            style="@style/LoginFormContainer"
            android:orientation="vertical" >

            <include layout="@layout/merge_signup" />

            <EditText
                android:id="@+id/parents_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your name"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/parents_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/parents_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone number"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/kids_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kids age"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/kids_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kids gender"
                android:maxLines="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="@string/sign_up" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>